{
    "name": "tamabotchi-desktop-pet",
    "version": "1.0.0",
    "description": "TamaBotchi Desktop Pet - A fluffy bunny that summarizes your iMessage conversations",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && tsc -p tsconfig.electron.json",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "npm run build && electron-builder",
        "preview": "vite preview",
        "start": "npm run electron:dev"
    },
    "dependencies": {
        "axios": "^1.7.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@types/node": "^20.14.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "concurrently": "^8.2.2",
        "electron": "^31.0.0",
        "electron-builder": "^24.13.3",
        "typescript": "^5.5.3",
        "vite": "^5.3.4",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.tamabotchi.desktop-pet",
        "productName": "TamaBotchi Pet",
        "mac": {
            "target": "dmg",
            "category": "public.app-category.utilities"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ]
    }
}